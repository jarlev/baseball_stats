<div class="container-fluid">
	<h1>Create a new post-season</h1>
	<br>
	<%= form_for PostSeason.new, url: create_post_season_season_path do |f| %>
		<div class="form-group">
			<%= f.label :post_season_name %><br>
			<%= f.text_field :post_season_name, class: "form-inline" %>
		</div>
		<div class="form-group">
	  		<%= f.label :start_date %>
	    		<%= f.date_select :start_date, {start_year: 1970, end_year: 2020, prompt: {day: 'Select day', month: 'Select month', year: 'Select year'}}, {class: "form-inline"} %>
		</div>
		<div class="form-group">
	  		<%= f.label :end_date %>
	    		<%= f.date_select :end_date, {start_year: 1970, end_year: 2020, prompt: {day: 'Select day', month: 'Select month', year: 'Select year'}}, {class: "form-inline"} %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.label "how many weeks are in a season?" %>
	    		<%= f.number_field :length, class: "form-inline" %>
	  	</div>
		<div class="form-group">
	    		<%= f.submit "Submit", class: "btn btn-default btn-sm" %>
	  	</div>
	<% end %>
</div>