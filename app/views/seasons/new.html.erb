<div class="container-fluid">
	<h1>Create a new season</h1>
	<br>
	<div class="container-fluid">
		<%= form_for @regular_season, url: seasons_path do |f| %>
			<div class="form-group">
				<%= f.text_area :season_name, placeholder: "season name", class: "form-inline" %><br>
			</div>
			<div class="form-group">
		    		<%= f.collection_select :league_id, League.all, :id, :league_name, {prompt: "Select a league"}, {class: "form-inline"} %>
		  	</div>

		  	<div class="form-group">
		  		<%= f.label :start_date %>
		    		<%= f.date_select :start_date, {start_year: 1970, end_year: 2020, prompt: {day: 'Select day', month: 'Select month', year: 'Select year'}}, {class: "form-inline"} %>
		  	</div>
		  	<div class="form-group">
		  		<%= f.label :end_date %>
		    		<%= f.date_select :end_date, {start_year: 1970, end_year: 2020, prompt: {day: 'Select day', month: 'Select month', year: 'Select year'}}, {class: "form-inline"} %>
		  	</div>
		  	<div class="form-group">
		  		<%= f.label "how many weeks are in a season?" %>
		    		<%= f.number_field :length, class: "form-inline" %>
		  	</div>
			<%= f.submit "Create season", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>